<div class="all">
  <div class="header">
    <%= render "menu_bar"%>
  </div>
  
  <div class="main">
    <% if user_signed_in? %>
      <p id="notice"><%= notice %></p>


  <div class="calendar">
  <%= month_calendar events: @meetings do |date,meetings| %>
  <%= date.strftime("%-d")%>

    <% meetings.each do |meeting| %>
      <div>
        <%=link_to meeting_path(meeting.id) do%>
        <%= meeting.name %>
        <% end %>
      </div>
    <% end %>
  <% end %>
  </div>


  <br>
  <%= form_with model:@meeting, url:meetings_path(@meeting),local:true do |f| %>

    <div class="field">
      <%= f.label "予定" %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label "詳細" %>
      <%= f.text_field :text %>
    </div>

    <div class="actions">
      <%= f.submit"登録" %>
    </div>

  <% end %>
  <% end %>
</div>

  
