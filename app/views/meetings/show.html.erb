  <div class="header">
    <%= render "menu_bar"%>
  </div>

<div class="main">
    <% if user_signed_in? %>

  <div class="calendar-all">
  <div class="calendar">
  <%= month_calendar events: @meetings do |date,meetings| %>
  <%= date.strftime("%-d")%>

    <% meetings.each do |meeting| %>
      <div>
        <%=link_to meeting_path(meeting.id) do%>
        <%= meeting.name %>
        <% end %>
      </div>
    <% end %>
  <% end %>
  </div>


<div class="calendar-show">
<div class="calendar-show-group">
  <strong class="calendar-content">日付:</strong>
  <div class="calendar-show-date"><%= @meeting.start_time.time.strftime("%Y年%m月%d日") %></div>
</div>


<div class="calendar-show-group">
  <strong class="calendar-content">予定:</strong>
  <div class="calendar-show-date"><%= @meeting.name %></div>
</div>


<div class="calendar-show-group">
  <strong class="calendar-content">詳細:</strong>
  <div class="calendar-show-date"><%= @meeting.text%></div>
</div>


<div class="calendar-show-group">
<%= link_to '編集', edit_meeting_path(@meeting.id),class:"calendar-content-btn"%> 
<%= link_to '削除', meeting_path(@meeting), method: :delete,class:"calendar-content-btn", data: { confirm: '削除してもよろしいですか?' } %>
<%= link_to '戻る', meetings_path,class:"calendar-content-btn"%>
</div>
<% end %>
</div>
</div>
