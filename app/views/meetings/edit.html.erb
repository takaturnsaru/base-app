<div class="all">
  <div class="header">
    <%= render "schedules/menu_bar"%>
  </div>
  
  <div class="main">
    <% if user_signed_in? %>
      <p id="notice"><%= notice %></p>

  <h1>Meetings</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Start time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @meetings.each do |meeting| %>
        <tr>
          <td><%= meeting.name %></td>
          <td><%= meeting.start_time %></td>
          <td><%= link_to 'Show', meeting %></td>
          <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
          <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= month_calendar events: @meetings do |date,meetings| %>
  <%= date%>

    <% meetings.each do |meeting| %>
      <div>
        <%= meeting.name %>
      </div>
    <% end %>
  <% end %>


  <br>
  <%= form_with model:@meeting, url:meeting_path(@meeting.id),local:true do |f| %>

    <div class="field">
      <%= f.label "予定" %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label "詳細" %>
      <%= f.text_field %>
    </div>

    <div class="actions">
      <%= f.submit"登録" %>
    </div>

  <% end %>
  <% end %>
</div>
